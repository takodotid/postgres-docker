{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["github>kakushindev/renovate-config"],
    "packageRules": [
        {
            "matchDatasources": ["docker"],
            "matchPackageNames": ["docker.io/bitnami/postgresql", "docker.io/timescale/timescaledb"],
            "versioning": "semver",
            "automerge": false
        }
    ],
    "major": { "enabled": false },
    "minor": { "enabled": true  },
    "patch": { "enabled": true  }
}